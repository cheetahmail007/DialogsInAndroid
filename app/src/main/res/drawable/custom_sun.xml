<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#252524" />
            <gradient android:angle="90" android:centerColor="#F57C00"
                android:endColor="#E64A19" android:gradientRadius="100dp"
                android:startColor="#FF0000" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#E64A19" />
            <gradient android:angle="270" android:centerColor="#FBC02D"
                android:endColor="#E64A19" android:gradientRadius="100dp"
                android:startColor="#FBC02D" />
        </shape>
    </item>
</selector>